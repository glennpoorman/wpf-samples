<!-- Add an additional "xmlns" tag for the "Views" namespace so that we can reference the
     "ScoutView" object. -->

<Window x:Class="ContextMenus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ContextMenus.Views"
        Title="ContextMenus" Height="310" Width="400" ResizeMode="NoResize">

    <!-- The content of our window is a single instance of the "ScoutView" user control. -->

    <views:ScoutsView x:Name="scoutsView"/>

</Window>
