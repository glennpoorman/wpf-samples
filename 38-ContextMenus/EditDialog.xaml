<!-- Add an additional "xmlns" tag for the "Views" namespace so that we can reference the
     "ScoutView" object. -->

<Window x:Class="ContextMenus.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ContextMenus.Views"
        Title="Edit Scout" Height="240" Width="325" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <!-- The content of our window is a single instance of the "ScoutView" user control. -->

    <views:ScoutView x:Name="scoutView"/>

</Window>
